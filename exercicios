exercicios

Exercicio 1:

#include<iostream>

using namespace std;

//inciar codigo principal
int main()
{
    int visitantes;

    cout << "Digite o numero de visitantes que acessaram o site hoje : ";
    cin >> visitantes;

    //saida
    cout << "\nNumero de visitantes registrados hoje: " << visitantes;
}

Exercicio 2:

#include<iostream>

using namespace std;

//iniciar codigo principal
int main()
{
    float receita, despesa, saldo;

    cout << "\nDigite o valor da receita : ";
    cin >> receita;

    cout << "\nDigite o valor da despesa : ";
    cin >> despesa;

    //valor
    saldo = receita - despesa;

    //saida
    cout << "\nValor final do saldo : " << saldo;
}
